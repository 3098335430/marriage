<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.marriage.dao.UserDao">
	<!-- 目的：为dao接口方法提供sql语句配置 -->
	<select id="queryById" resultType="User" parameterType="long">
		<!-- 具体的sql -->
		SELECT
			user_id,
			username,
			password
		FROM
			user
		WHERE
			user_id = #{userId}
	</select>
	
	<select id="queryAll" resultType="User">
		SELECT
			user_id,
			username,
			password
		FROM
			user
		ORDER BY
			user_id
		LIMIT #{offset}, #{limit}
	</select>
	<select id="getUserByUsernameAndPassword" resultType="User" parameterType="User">
		<!-- 具体的sql -->
		SELECT
			user_id,
			username,
			password
		FROM
			user
		WHERE
			username=#{username}
			AND
			password=#{password}
	</select>

		<select id="getUserByUsername" resultType="User" parameterType="String">
		<!-- 具体的sql -->
		SELECT
			user_id,
			username,
			password
		FROM
			user
		WHERE
			username=#{username}
	</select>
 <!-- 添加一条新记录,默认返回值是int，无法修改 -->  
    <insert id="saveUser"   parameterType="User" >  
        insert into user(username,password) values(#{username},#{password})  
    </insert>  

</mapper>