<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.marriage.dao.DocumentDao">
	<!-- 目的：为dao接口方法提供sql语句配置 -->
	<select id="getDocumentById" resultType="Document" parameterType="long">
		<!-- 具体的sql -->
		SELECT
			d_id,
			title,
			content
		FROM
			document
		WHERE
			d_id = #{dId}
	</select>
	
	<select id="getDocumentList" resultType="Document">
		SELECT
			u_id,
			title,
			content
		FROM
			document
		ORDER BY
			d_id
		LIMIT #{offset}, #{limit}
	</select>
	
 <!-- 添加一条新记录,默认返回值是int，无法修改 -->  
    <insert id="saveDocument"   parameterType="Document" >  
        insert into document(title,content) values(#{title},#{content})  
    </insert>  

</mapper>